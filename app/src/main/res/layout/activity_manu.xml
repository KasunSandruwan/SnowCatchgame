<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ksnsandaruwangmail.snowcatch.Manu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="How to Play "
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:id="@+id/h_Play"
            android:onClick="How_to_play"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/Start_game"
            android:layout_alignLeft="@+id/Start_game"
            android:layout_alignStart="@+id/Start_game" />

        <Button
            android:text="About "
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:id="@+id/ab"
            android:onClick="about"
            android:layout_below="@+id/h_Play"
            android:layout_alignLeft="@+id/h_Play"
            android:layout_alignStart="@+id/h_Play"
            android:layout_marginTop="28dp"
            android:layout_alignRight="@+id/Start_game"
            android:layout_alignEnd="@+id/Start_game" />

        <Button
            android:text="Exit"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:onClick="exit"
            android:id="@+id/exit"
            android:layout_below="@+id/ab"
            android:layout_alignLeft="@+id/ab"
            android:layout_alignStart="@+id/ab"
            android:layout_marginTop="19dp"
            android:layout_alignRight="@+id/ab"
            android:layout_alignEnd="@+id/ab" />

        <Button
            android:text="Start game"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:id="@+id/Start_game"
            android:layout_marginTop="25dp"
            android:onClick="Start"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
